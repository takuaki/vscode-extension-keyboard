{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./dist/",
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true /* enable all strict type-checking options */,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
